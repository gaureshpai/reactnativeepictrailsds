{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "ignoreDeprecations": "6.0",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "nativewind-env.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example"
  ]
}
